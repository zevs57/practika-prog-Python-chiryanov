# Посмотрите на шрифт для написания почтового индекса на конвертах:
# Воспользуйтесь списками кортежей, чтобы задать рисование Черепашкой таких цифр. 
# Нарисуйте на экране индекс 141700.

import turtle

turtle.shape('turtle')


x_start = -400  # Стартовая координата x.
turtle.pensize(5)
turtle.color("blue")
turtle.speed(5)

# Рисуем 1
turtle.penup()
turtle.goto(x_start, 0)
turtle.right(90)
turtle.forward(40)
turtle.pendown()

turtle.left(90+45)
turtle.forward(55)
turtle.right(180-45)
turtle.forward(80)
turtle.right(180)
turtle.forward(80)

# Рисуем 4
turtle.penup()
turtle.right(90)
turtle.forward(30)
turtle.pendown()

turtle.right(90)
turtle.forward(40)
turtle.left(90)
turtle.forward(40)
turtle.right(90)
turtle.forward(40)
turtle.right(180)
turtle.forward(80)

# Рисуем 1
turtle.penup()
turtle.right(90)
turtle.forward(30)  # смешение к верхнему левому углу новой цифры
turtle.right(90)
turtle.forward(40)
turtle.pendown()

turtle.left(90+45)
turtle.forward(55)
turtle.right(180-45)
turtle.forward(80)
turtle.right(180)
turtle.forward(80)

# Рисуем 7
# смешение к верхнему левому углу новой цифры
turtle.penup()
turtle.right(90)
turtle.forward(30)
turtle.pendown()
# рисуем саму цифру
turtle.forward(40)
turtle.right(90+45)
turtle.forward(55)
turtle.left(45)
turtle.forward(40)
turtle.left(180)
turtle.penup()
turtle.forward(80)
turtle.right(90)
turtle.forward(40)
turtle.pendown()

# Рисуем 0
# смешение к верхнему левому углу новой цифры
turtle.penup()
turtle.forward(30)
turtle.pendown()
# рисуем саму цифру
turtle.right(90)
turtle.forward(80)
turtle.left(90)
turtle.forward(40)
turtle.left(90)
turtle.forward(80)
turtle.left(90)
turtle.forward(40)
turtle.left(180)
turtle.forward(40)

# Рисуем 0
# смешение к верхнему левому углу новой цифры
turtle.penup()
turtle.forward(30)
turtle.pendown()
# рисуем саму цифру
turtle.right(90)
turtle.forward(80)
turtle.left(90)
turtle.forward(40)
turtle.left(90)
turtle.forward(80)
turtle.left(90)
turtle.forward(40)
turtle.left(180)
turtle.forward(40)

turtle.exitonclick()
